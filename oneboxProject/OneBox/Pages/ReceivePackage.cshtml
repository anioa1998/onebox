@page "/receive"
@model OneBox.Pages.ReceivePackageModel

<h1 class="text-center">Odbierz paczkę!</h1>
<br />
<form method="post" class="form-group" enctype="multipart/form-data">
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="inputGroupFile01" asp-for="Upload">
        <label class="custom-file-label" for="inputGroupFile01">
            @if (Model.Upload != null)
            {
                @Model.Upload.FileName
            }
            else
            {
                <a>Wskaż plik</a>
            }
        </label>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Odbierz przesyłkę</button>
</form>

<br />
